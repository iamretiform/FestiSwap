<div class="card hoverable">
  <h4>
    <%= @ad.title %>
    <div class="divider"></div>
    <span><%= image_tag @ad.file.url(:medium) %></span>
  </h4>
  <p>
    <b>Description:</b>
    <%= @ad.description %>
  </p>
  <p>
    <b>Dates at Event:</b>
    <%= @ad.start_date.strftime("%b %d, %Y") %> -
    <%= @ad.termination_date.strftime("%b %d, %Y") %>
  </p>
  <% if current_user %>
    <% if current_user.id == @ad.user_id %>
      <div class="waves-effect waves-light btn white">
        <%= link_to 'Edit', edit_event_ad_path(@event, @ad) %>
      </div>
      <%= link_to 'Destroy', event_ad_path(@event, @ad), :confirm => 'Are you sure?', method: :delete, class: "waves-effect waves-light btn red" %>
    <% end %>
  </td>
</td>
<% end %>
<div class="waves-effect waves-light btn white">
  <%= link_to 'Back', event_path(@event) %>
</div>
<%= render 'disqus' %>
</div>